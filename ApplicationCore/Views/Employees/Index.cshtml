@using ApplicationCore.Models
@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Privacy";

}

<div class="overflow-x-auto">
  <table class="min-w-full divide-y-2 divide-gray-200 bg-white text-sm">
    <thead class="text-left">
      <tr>
        <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">
          Имя
        </th>
        <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">
          Фамилия
        </th>
        <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">
          Отчество
        </th>
        <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">
          Возраст
        </th>
        <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">
          Дата рождения
        </th>
        <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">
          Серия документа
        </th>
        <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">
            Номер документа
        </th>
        <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">
            Должность
        </th>
        <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">
        </th>
      </tr>
    </thead>

    <tbody class="divide-y divide-blue-100">
       @foreach(var el in Model){
          <tr class="odd:bg-blue-50">
            <td class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">
              @el.FirstName
            </td>
            <td class="whitespace-nowrap px-4 py-2 text-gray-700">
                @el.SurName
            </td>
            <td class="whitespace-nowrap px-4 py-2 text-gray-700">
                @el.Patronymic
            </td>
            <td class="whitespace-nowrap px-4 py-2 text-gray-700">
            </td>
            <td class="whitespace-nowrap px-4 py-2 text-gray-700">
                @el.DateOfBirth
            </td>
            <td class="whitespace-nowrap px-4 py-2 text-gray-700">
                @el.DocSeries
            </td>
            <td class="whitespace-nowrap px-4 py-2 text-gray-700">
                @el.DocNumber
            </td>
           <td class="whitespace-nowrap px-4 py-2 text-gray-700">
                @el.Position
            </td>
            <td class="whitespace-nowrap px-4 py-2 text-gray-700">
                <span class="inline-flex overflow-hidden rounded-md border bg-white shadow-sm">
                  <button
                    class="inline-block border-e p-3 text-gray-700 hover:bg-gray-50 focus:relative"
                    title="Edit Product"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke-width="1.5"
                      stroke="currentColor"
                      class="h-4 w-4"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10"
                      />
                    </svg>
                  </button>

                  <button
                    class="inline-block p-3 text-gray-700 hover:bg-gray-50 focus:relative"
                    title="Delete Product"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke-width="1.5"
                      stroke="currentColor"
                      class="h-4 w-4"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0"
                      />
                    </svg>
                  </button>
                </span>
            </td>
          </tr>
       }



    </tbody>
  </table>

  <div
  class="group relative inline-block overflow-hidden border border-blue-100 px-8 py-3 focus:outline-none focus:ring"
  
    >
  <span
    class="absolute inset-y-0 left-0 w-[2px] bg-blue-100 transition-all group-hover:w-full group-active:bg-blue-50"
  ></span>

  <span
    class="relative text-sm font-medium text-blue-600 transition-colors group-hover:text-blue-800"
  >
    @Html.ActionLink("Добавить сотрудника", "Create", "Employees", new { DepID = ViewData["DepID"]}, new {@class="relative text-sm font-medium text-blue-600 transition-colors group-hover:text-blue-800"} )

  </span>
</div>
</div>

