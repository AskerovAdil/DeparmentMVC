@model Employee

<div class="mx-auto max-w-screen-xl px-4 py-16 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-lg">
        <h1 class="text-center text-2xl font-bold text-blue-600 sm:text-3xl">
            Добавить пользователя
        </h1>

        <div class="mb-0 mt-6 space-y-4 rounded-lg p-4 shadow-lg sm:p-6 lg:p-8">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ID)
                    @Html.HiddenFor(model => model.DepartmentID)

                    <div class="mb-2">
                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "w-full rounded-lg border-gray-200 p-4 pe-12 text-sm shadow-sm" } })
                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-2">
                        @Html.EditorFor(model => model.SurName, new { htmlAttributes = new { @class = "w-full rounded-lg border-gray-200 p-4 pe-12 text-sm shadow-sm" } })
                        @Html.ValidationMessageFor(model => model.SurName, "", new { @class = "text-danger"})
                    </div>
                    <div class="mb-2">
                        @Html.EditorFor(model => model.Patronymic, new { htmlAttributes = new { @class = "w-full rounded-lg border-gray-200 p-4 pe-12 text-sm shadow-sm" } })
                        @Html.ValidationMessageFor(model => model.Patronymic, "", new { @class = "text-danger"})
                    </div>
                    <div class="mb-2">
                        @Html.EditorFor(model => model.DocNumber, new { htmlAttributes = new { @class = "w-full rounded-lg border-gray-200 p-4 pe-12 text-sm shadow-sm" } })
                        @Html.ValidationMessageFor(model => model.DocNumber, "", new { @class = "text-danger" })
                    </div>
                    <div class="mb-2">
                        @Html.EditorFor(model => model.DocSeries, new { htmlAttributes = new { @class = "w-full rounded-lg border-gray-200 p-4 pe-12 text-sm shadow-sm" } })
                        @Html.ValidationMessageFor(model => model.DocSeries, "", new { @class = "text-danger"})
                    </div>
                    <div class="mb-2">
                        @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "w-full rounded-lg border-gray-200 p-4 pe-12 text-sm shadow-sm" } })
                        @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })
                    </div>
                    <div class="mb-4">
                        @Html.EditorFor(model => model.Position, new { htmlAttributes = new { @class = "w-full rounded-lg border-gray-200 p-4 pe-12 text-sm shadow-sm" } })
                        @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger"})
                    </div>
                    <button type="submit"
                        class="block w-full rounded-lg bg-blue-600 px-5 py-3 text-sm font-medium text-white">
                        Создать
                    </button>
                </div>
            }

        </div>
    </div>
</div>



